rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Admins collection - allow authenticated users to create their own admin entry (for initial setup)
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if request.auth != null && request.auth.uid == adminId;
    }
    
    // Users collection - allow authenticated users to read all users, admins can write any, users can write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    // Energy consumption data - users read/write their own data, admins can read all
    match /energy_consumption/{userId}/{document=**} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Purchases - users read/write their own purchase data, admins can read all
    match /purchases/{userId}/{document=**} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Energy listings - authenticated users can create, read all active listings, admins have full access
    match /energy_listings/{listingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.sellerId;
      allow update: if isAdmin() || (request.auth != null && 
                      (request.auth.uid == resource.data.sellerId || 
                       request.resource.data.status == 'sold'));
      allow delete: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.sellerId);
    }
    
    // Energy transactions - authenticated users can read all transactions, admins have full access
    match /energy_transactions/{transactionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
      allow update: if isAdmin() || (request.auth != null && 
                      (request.auth.uid == resource.data.buyerId || 
                       request.auth.uid == resource.data.sellerId));
      allow delete: if isAdmin();
    }
    
    // User wallets - users can read all wallets, admins have full access
    match /user_wallets/{walletId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdmin() || request.auth != null;
      allow delete: if isAdmin();
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}